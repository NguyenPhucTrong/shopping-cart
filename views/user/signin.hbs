<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1>Sign In</h1>
    {{#if hasErrors}}
      <div class="messages">
        {{#each messages}}
          <p>{{this.messages}}</p>
        {{/each}}
      </div>
    {{/if}}
    <form action="/user/signin" method="post">
      <div class="form-group signin">
        <label for="email">E-Mail</label>
        <input
          type="text"
          id="email"
          name="email"
          class="form-control"
          required
        />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          required
        />
      </div>
      <input
        type="hiden"
        name="_csrf"
        value="{{csrfToken}}"
        class="signup-id"
      />
      <button type="submit" class="btn btn-danger">Sign in</button>
      <p class="pull-right web">
        New to our website ?
        <a class="pull-right register" href="/user/signup">Sign Up</a></p>
    </form>
  </div>
</div>