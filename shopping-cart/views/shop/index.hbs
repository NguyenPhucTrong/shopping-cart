<div class="row">
  {{#each products}}
    {{#each this}}
      {{#if _id}}
        <div id="{{_id}}" class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <img src="{{imagePath}}" alt="..." class="img-responsive" />
            <div class="caption">
              <h3>{{title}}</h3>
              <p class="description">
                <button
                  type="button"
                  class="btn btn-light"
                  data-toggle="modal"
                  data-target="#modal_{{_id}}"
                >
                  Details
                </button>

                <!-- Modal -->
                <div
                  class="modal fade"
                  id="modal_{{_id}}"
                  tabindex="-1"
                  role="dialog"
                  aria-labelledby="exampleModalLongTitle"
                  aria-hidden="true"
                >
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5
                          class="modal-title"
                          id="exampleModalLongTitle"
                        >OVERVIEW</h5>
                        <button
                          type="button"
                          class="close"
                          data-dismiss="modal"
                          aria-label="Close"
                        >
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        {{description}}
                      </div>
                      <div class="modal-footer">
                        <button
                          type="button"
                          class="btn btn-primary"
                          data-dismiss="modal"
                        >Close</button>
                      </div>
                    </div>
                  </div>
                </div>
              </p>
            </div>
            <div class="clearfix">
              <div class="price"> ${{price}} </div>
              <div class="quantity"> Quantity: {{quantity}} </div>
              <br />
              <a
                href="/add-to-cart/{{_id}}"
                class="btn btn-danger pull-right"
                role="button"
              >Add to Shopping Cart</a>
              {{#if isDisplay}}
                <a
                  href="/product/edit-product/{{_id}}"
                  class="btn btn-danger pull-right"
                  role="button"
                >Edit</a>
                <button
                  data-id="{{_id}}"
                  class="btn btn-danger pull-primary pull-right delete-product"
                >Delete</button>
              {{/if}}
            </div>
            <br />

          </div>
        </div>
      {{/if}}
    {{/each}}
  {{/each}}
  <nav aria-label="Page navigation example">
    <ul class="pagination">
      <li class="page-item"><a class="page-link" href="/">1</a></li>
      <li class="page-item"><a class="page-link" href="/?page=2">2</a></li>
    </ul>
  </nav>
</div>