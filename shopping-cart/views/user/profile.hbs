<div class="row">
  <div class="col-md-4 col-md-offset-4" id="{{_id}}">
    <h1>User Account</h1>
    <form action="/user/profile/{{_id}}" method="post">
      <div class="form-group">
        <label for="title">Email</label>
        <input
          type="text"
          class="form-control"
          name="email"
          value="{{email}}"
          required
        />
      </div>
      <div class="form-group">
        <label for="title">First Name</label>
        <input
          type="text"
          class="form-control"
          name="firstname"
          value="{{firstname}}"
          required
        />
      </div>
      <div class="form-group">
        <label for="title">Last name</label>
        <input
          type="text"
          class="form-control"
          name="lastname"
          value="{{lastname}}"
          required
        />
      </div>
      <div class="form-group">
        <label for="title">Age</label>
        <input
          type="text"
          class="form-control"
          name="age"
          value="{{age}}"
          required
        />
      </div>
      <input
        type="hidden"
        name="_csrf"
        value="{{csrfToken}}"
        class="signup-id"
      />
      <button type="submit" class="btn btn-danger">Edit User</button>
    </form>
  </div>
</div>